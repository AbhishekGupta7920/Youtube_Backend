<%- include('./partials/navbar.ejs') %> 
<!-- Include the navbar partial for consistent navigation across pages -->

<div class="bg-gray-900 px-8 py-6 flex justify-center items-center">
    <!-- Main container for the "Add Channel" page, centered and with padding -->

    <div
        class="px-8 py-6 flex flex-col gap-4 bg-gray-950 text-lg text-gray-200 rounded-lg w-full md:w-3/4 lg:w-1/2">
        <!-- Form container: responsive, rounded, and styled -->
        
        <h1 class="text-center text-orange-500 text-2xl font-semibold">Add Channel</h1>
        <!-- Page title with styling and centered alignment -->

        <form action="/addChannel" method="POST" class="flex flex-col gap-6">
            <!-- Form to submit a new channel, sending data to the /addChannel route with a POST request -->

            <div class="flex flex-col gap-2">
                <!-- Input field container with a label and input -->
                
                <label for="channelName">Channel Name</label>
                <!-- Label for the input field -->
                
                <input required type="text" id="channelName" name="channelName"
                    class="bg-gray-700 h-12 px-2 rounded-md border border-cyan-600 hover:border-cyan-400"
                    placeholder="Enter Channel Name ">
                <!-- Input field for the channel name with styling and a placeholder -->
            </div>

            <div class="text-center">
                <!-- Container for the submit button, centered -->
                
                <button type="submit"
                    class="px-4 py-2 bg-orange-500 text-white rounded-md hover:bg-orange-600 focus:outline-none focus:bg-orange-600">
                    Submit
                </button>
                <!-- Submit button with hover and focus styling -->
            </div>
        </form>
    </div>
</div>

